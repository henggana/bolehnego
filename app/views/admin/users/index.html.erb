<h1 class="userListHeading">User List</h1>
<hr />
  
<div class="mod table" id="product-list">
  <div class="inner">
    <table id="user-list-table" class="box-table" summary="User List">
      <thead>
        <tr>
          <th scope="col">User ID</th>
          <th scope="col">Email</th>
          <th scope="col">Privilidges</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |u| %>
        <tr>
          <td><%= u.id %></td>
          <td><%= link_to_if (can? :delete, @user),  u.email, edit_admin_user_path(u) %></td>
          <td><%= link_to u.usertype.name, "#", :class => "popupTrigger", :onclick => "showPopup('#{u.usertype.name}')" %></td>
          <td><%= link_to_if (can? :delete, @user), 'delete', admin_users_path(u), :method => 'delete' %></td>
        </tr>
      <% end %>  
      </tbody>
    </table>
  </div>
</div>

