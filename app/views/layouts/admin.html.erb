          <li><%= link_to "Unknown", "%"%></li>
          <li><%= link_to "Unknown","#"%></li>
        </ul>
      </li>
      <li><%= link_to "Special Offer", "#"%>
        <ul class="child">
          <li><%= link_to "Add Event", "#"%></li>
          <li><%= link_to "Add Special Offer", "#"%></li>
          <li><%= link_to "Event List", "#"%></li>
        </ul>
      </li>
      <li><%= link_to "Customer Review", "#"%></li>
      <li><%= link_to "Store", "#"%>
        <ul class="child">
          <li><%= link_to "Add Store", "#"%></li>
        </ul>
      </li>
      <li><%= link_to "Manufacter", "#"%>
        <ul class="child">
          <li><%= link_to "Add Manufacter", "#"%></li>
        </ul>
      </li>
      <li><%= link_to "Bolehnego.com Profile", "#"%></li>
