          <li><%= link_to_if (can? :update, @users), 'Add Admin', new_admin_user_path %></li>
          <li><%= link_to "Add Customer", "#"%></li>
        </ul>
      </li>
      <li> <%= link_to "Product", "#"%>
        <ul class="child">
          <li><%= link_to "Add Product", "#"%></li>
